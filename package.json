{
  "name": "react-json-ui",
  "version": "0.3.0",
  "description": "React components capable of building UIs out of a JSON file.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adrianhdezm/react-json-ui.git"
  },
  "keywords": [
    "react",
    "forms",
    "formik",
    "json-ui",
    "json-schema",
    "react-json-ui"
  ],
  "author": "Adrian Hernandez-Mendez",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/adrianhdezm/react-json-ui/issues"
  },
  "homepage": "https://github.com/adrianhdezm/react-json-ui#readme",
  "main": "dist/index.js",
  "umd:main": "dist/react-json-ui.umd.production.js",
  "module": "dist/react-json-ui.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "tsdx watch --verbose",
    "build": "tsdx build --format=cjs,esm,umd",
    "test": "tsdx test",
    "lint": "npm run format && tsdx lint src tests --ext .ts --ext .tsx",
    "format": "prettier --write 'src/**/*.{ts,tsx}' 'tests/**/*.{ts,tsx}' 'README.md' 'ts*.json'"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "formik": "^2.1.0",
    "react-dropzone": "^11.0.0",
    "@material-ui/core": "^4.10.0",
    "@material-ui/icons": "^4.9.0",
    "@material-ui/lab": "^4.0.0-alpha.54",
    "@material-ui/pickers": "^3.2.10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "devDependencies": {
    "@date-io/date-fns": "^1.3.13",
    "@material-ui/core": "^4.10.0",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.54",
    "@material-ui/pickers": "^3.2.10",
    "@types/ajv": "^1.0.0",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^25.2.1",
    "@types/json-pointer": "^1.0.30",
    "@types/react": "^16.9.32",
    "@types/react-dom": "^16.9.6",
    "@typescript-eslint/eslint-plugin": "^3.0.0",
    "@typescript-eslint/parser": "^3.0.0",
    "date-fns": "^2.14.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.2",
    "formik": "^2.1.4",
    "husky": "^4.2.3",
    "json-schema": "^0.2.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-dropzone": "^11.0.1",
    "tsdx": "^0.13.1",
    "tslib": "^1.11.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "ajv": "^6.12.2",
    "json-pointer": "^0.6.0"
  }
}
