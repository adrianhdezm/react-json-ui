  "module": "lib/react-json-ui.esm.js",
  "browser": "lib/react-json-ui.umd.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
